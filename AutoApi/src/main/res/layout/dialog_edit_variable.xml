<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            tools:text="Name："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/title_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_name"
            tools:text="Cookie_zzzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{item.name}"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textSize="16sp" />

        <TextView
            tools:text="Value："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value"
            android:textColor="@color/title_color"
            android:textSize="18sp" />

        <TextView
            tools:text="pin=sdfasdfasadfasdfas;key=sdafasdfadfafafasfasdsdafdfasdfafadfafasdfa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.value}"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/remarks"
            android:textColor="@color/title_color"
            android:textSize="18sp" />

        <TextView
            tools:text="Remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{item.remarks}"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        tools:text="@string/global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:text="@string/global"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:visibility="@{item.isGlobal ? View.VISIBLE : View.GONE}" />

</com.google.android.material.card.MaterialCardView>