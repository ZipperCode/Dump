<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launch"
        android:contentDescription="@string/contentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_service_switch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/card_foreground"
            app:cardBackgroundColor="@color/card_unable_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/iv_service_switch_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription"
                    app:srcCompat="@drawable/ic_baseline_cancel_64" />

                <TextView
                    android:id="@+id/tv_service_switch_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="@string/service_stopped"
                    android:textColor="@color/card_unable_text_color"
                    android:textSize="@dimen/card_title_text_size"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_apps_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/card_foreground"
            app:cardBackgroundColor="@color/card_enable_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription"
                    app:srcCompat="@drawable/ic_baseline_apps_64" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="@string/apps_setting"
                    android:textColor="@color/card_enable_text_color"
                    android:textSize="@dimen/card_title_text_size"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/card_foreground"
            app:cardBackgroundColor="@color/card_enable_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription"
                    app:srcCompat="@drawable/ic_baseline_settings_64" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="@string/setting_name"
                    android:textColor="@color/card_enable_text_color"
                    android:textSize="@dimen/card_title_text_size"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/card_foreground"
            app:cardBackgroundColor="@color/card_enable_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/contentDescription"
                    app:srcCompat="@drawable/ic_baseline_help_64" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="@string/help_name"
                    android:textColor="@color/card_enable_text_color"
                    android:textSize="@dimen/card_title_text_size"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>